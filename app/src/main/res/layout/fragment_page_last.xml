<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootSecondPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/holo_green_dark"
    tools:ignore="ContentDescription">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/basic_margin_48dp"
        android:text="アプリ断捨離を始める前に！！\nひとつだけお願いです"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/basic_margin_16dp"
        android:layout_below="@+id/explanation"
        android:text="断捨離するアプリを選ぶために\n「使用状況へのアクセス」を許可してください"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        />

    <ImageView
        android:id="@+id/ivSecondImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:alpha=".5"
        android:src="@mipmap/ic_launcher"
        app:layout_heightPercent="6%"
        app:layout_marginRightPercent="7%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="19%" />

    <ImageView
        android:id="@+id/ivThirdImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:alpha=".5"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="16%"
        app:layout_marginTopPercent="43%"
        app:layout_widthPercent="15%" />

    <ImageView
        android:id="@+id/ivFourthImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:alpha=".5"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="74%"
        app:layout_marginTopPercent="52%"
        app:layout_widthPercent="13%" />

    <ImageView
        android:id="@+id/ivSeventhImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:alpha=".5"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="70%"
        app:layout_marginTopPercent="35%"
        app:layout_widthPercent="17%" />

    <ImageView
        android:id="@+id/ivFirstImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="32%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tutorial_permission"
        app:layout_heightPercent="45%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/ivEighthImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:alpha=".5"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="72%"
        app:layout_widthPercent="25%" />

    <junkuvo.apps.danshari.custom_views.Ellipsebutton
        android:id="@+id/b_grant_permission"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ellipse_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/basic_margin_16dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:elevation="@dimen/basic_margin_4dp"
        android:onClick="onClick"
        app:layout_marginBottomPercent="11%"
        app:webRadius="@dimen/ellipse_button_radius"
        app:webSolidColor="@color/colorPrimary"
        app:webStrokeColor="@color/colorPrimary"
        app:webText="@string/button_to_access_permission_screen"
        app:webTextColor="@android:color/white"
        app:webTextSize="16sp" />
</android.support.percent.PercentRelativeLayout>